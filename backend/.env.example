# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fleet_manager
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleet_manager
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Email/SMTP Configuration (for invoice emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@fleetmanager.com

# Google Maps API (for autocomplete and distance calculation)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_ENTITY=20

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173