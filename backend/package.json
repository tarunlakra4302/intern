{
  "name": "fleet-manager-backend",
  "version": "1.0.0",
  "description": "Fleet Manager API backend",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "test": "jest --coverage",
    "migrate": "knex migrate:latest --knexfile knexfile.cjs",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "migrate:make": "knex migrate:make --knexfile knexfile.cjs",
    "seed": "knex seed:run --knexfile knexfile.cjs",
    "seed:make": "knex seed:make --knexfile knexfile.cjs"
  },
  "keywords": [
    "fleet",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  }
}
